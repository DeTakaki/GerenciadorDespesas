<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="escobar.gabriel.engsoftware.ExcluirCategorias"
    android:id="@+id/relativeLayout">

    <TextView android:text="@string/selecione_categoria"
        android:layout_width="1000px"
        android:layout_height="150px"
        android:gravity="center"
        android:textSize="80px"
        android:textStyle="italic"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="1000px"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="74dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </Spinner>


    <Button
        android:layout_width="1000px"
        android:layout_height="150px"
        android:gravity="center"
        android:backgroundTint="#56a8da"
        android:text="@string/button_excluir"
        android:id="@+id/button6"
        android:visibility="visible"
        android:onClick="onClickExcluir"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="1000px"
        android:layout_height="150px"
        android:backgroundTint="#56a8da"
        android:text="@string/butom_cancelar"
        android:id="@+id/button7"
        android:visibility="visible"
        android:singleLine="false"
        android:onClick="onClickButtonCancelar"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />


</RelativeLayout>
