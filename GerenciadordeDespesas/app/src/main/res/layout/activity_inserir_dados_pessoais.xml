<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="escobar.gabriel.engsoftware.InserirDadosPessoais">

    <TextView
        android:layout_width="1000px"
        android:layout_height="150px"
        android:textSize="80px"
        android:gravity="center"
        android:textStyle="italic"
        android:text="Inserir Dados Pessoais"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="500px"
        android:layout_height="150px"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/insira_nome"
        android:id="@+id/textView3"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/editText2"
        android:layout_toStartOf="@+id/editText2" />

    <EditText
        android:layout_width="500px"
        android:layout_height="150px"
        android:gravity="center"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:enabled="true" />

    <TextView
        android:layout_width="500px"
        android:layout_height="150px"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/insira_sua_renda"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="500px"
        android:layout_height="150px"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <Button
        android:layout_width="1000px"
        android:layout_height="150px"
        android:backgroundTint="#56a8da"
        android:text="@string/butom_salvar"
        android:id="@+id/button12"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:onClick="onClickSalvar" />

    <Button
        android:layout_width="1000px"
        android:layout_height="150px"
        android:backgroundTint="#56a8da"
        android:layout_marginTop="10px"
        android:text="@string/butom_cancelar"
        android:id="@+id/button13"
        android:onClick="onClickVoltar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
