<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".inserir_categoria"
    android:onClick="onClickButtonCancelar">


    <TextView
        android:layout_width="1000px"
        android:layout_height="150px"
        android:textSize="80px"
        android:gravity="center"
        android:textStyle="italic"
        android:text="Inserir Categoria"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="1000px"
        android:layout_height="150px"
        android:gravity="center"
        android:inputType="textFilter|textPersonName|text"
        android:ems="10"
        android:id="@+id/editText"
        android:text="Nome"
        android:editable="false"
        android:clickable="true"
        style="@style/Animation.AppCompat.DropDownUp"
        android:enabled="true"
        android:layout_above="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4" />

    <Button
        android:layout_width="1000px"
        android:layout_height="150px"
        android:backgroundTint="#56a8da"
        android:text="@string/butom_salvar"
        android:id="@+id/button4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickButtonSalvar" />

    <Button
        android:layout_width="1000px"
        android:layout_height="150px"
        android:backgroundTint="#56a8da"
        android:text="@string/butom_cancelar"
        android:id="@+id/button5"
        android:onClick="onClickButtonCancelar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
