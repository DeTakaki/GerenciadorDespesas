<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Categorias">

    <TextView android:text="Categorias"
        android:layout_width="1000px"
        android:layout_height="150px"
        android:textSize="80px"
        android:gravity="center"
        android:textStyle="italic"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="1000px"
        android:layout_height="150px"
        android:backgroundTint="#56a8da"
        android:text="@string/butom_inserir_categoria"
        android:id="@+id/button"
        android:clickable="true"
        android:onClick="onClickInserirCategoria"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="1000px"
        android:layout_height="150px"
        android:backgroundTint="#56a8da"
        android:text="@string/butom_excluir_categoria"
        android:id="@+id/button2"
        android:clickable="true"
        android:onClick="onClickButtonExcluirCategoria"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="1000px"
        android:layout_height="150px"
        android:backgroundTint="#56a8da"
        android:text="@string/butom_voltar_categoria"
        android:id="@+id/button3"
        android:clickable="true"
        android:elegantTextHeight="false"
        android:onClick="onClickButtonVoltar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
